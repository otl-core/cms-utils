{
  "name": "@otl-core/cms-utils",
  "version": "1.0.1",
  "type": "module",
  "description": "Shared utility functions for OTL CMS",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "utils",
    "utilities",
    "typescript",
    "cms",
    "responsive"
  ],
  "author": "OTL Core",
  "license": "PolyForm-Shield-1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/otl-core/cms-utils.git"
  },
  "dependencies": {
    "@otl-core/cms-types": "^1.0.1",
    "clsx": "^2.1.1",
    "nanoid": "^5.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  }
}
